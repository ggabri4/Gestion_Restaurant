@page
@model Gestion_Restaurant.Pages.Serveurs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Serveur</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Serveur.Id" />
            <div class="form-group">
                <label asp-for="Serveur.Nom" class="control-label"></label>
                <input asp-for="Serveur.Nom" class="form-control" />
                <span asp-validation-for="Serveur.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serveur.Prenom" class="control-label"></label>
                <input asp-for="Serveur.Prenom" class="form-control" />
                <span asp-validation-for="Serveur.Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Serveur.CommandeEtablitID" class="control-label"></label>
                <select asp-for="Serveur.CommandeEtablitID" class="form-control" asp-items="ViewBag.CommandeEtablitID">
                    <option value="">Aucune</option>
                </select>
                <span asp-validation-for="Serveur.CommandeEtablitID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
