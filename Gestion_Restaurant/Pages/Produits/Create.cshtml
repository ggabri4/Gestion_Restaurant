@page
@model Gestion_Restaurant.Pages.Produits.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Ajouter un nouveau produit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Produit.Description" class="control-label"></label>
                <input asp-for="Produit.Description" class="form-control" />
                <span asp-validation-for="Produit.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produit.Prix" class="control-label"></label>
                <input asp-for="Produit.Prix" class="form-control" type="number" step="0.01"/>
                <span asp-validation-for="Produit.Prix" class="text-danger"></span>
            </div>
            <div class="form-group form-check form-switch my-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Produit.Dispo" /> @Html.DisplayNameFor(model => model.Produit.Dispo)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
