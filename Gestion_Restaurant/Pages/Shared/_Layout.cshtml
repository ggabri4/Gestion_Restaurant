<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" type="image/x-icon" href="~/img/logo.png" />
    <title>@ViewData["Title"] - Gestion_Restaurant</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gestion_Restaurant.styles.css" asp-append-version="true" />
    @RenderSection("head", false)
    <style>
        .navbar-nav a:hover {
            border-bottom: 1px solid #39ad41;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="height:57px;">
            <div class="container">

                <a class="navbar-brand text-center align-middle me-2" asp-area="" asp-page="/Index">
                    <img src="~/img/logo.png" width="40"/>
                </a>
                <a class="navbar-brand text-center align-middle" asp-area="" asp-page="/Index">
                    Écogourmet
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between pt-2">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark pb-3" asp-area="" asp-page="/Index">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark pb-3" asp-area="" asp-page="/Commandes/Index">Commandes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark pb-3" asp-area="" asp-page="/Factures/Index">Factures</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark pb-3" asp-area="" asp-page="/Paiements/Index">Paiments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark pb-3" asp-area="" asp-page="/Tables/Index">Tables</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark pb-3" asp-area="" asp-page="/Barmen/Index">Barmen</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark pb-3" asp-area="" asp-page="/Serveurs/Index">Serveurs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark pb-3" asp-area="" asp-page="/Produits/Index">Produits</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Gestion_Restaurant
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>