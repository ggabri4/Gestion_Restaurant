@page
@model Gestion_Restaurant.Pages.Barmen.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Modification</h1>

<h4>Barman</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Barman.Id" />
            <div class="form-group">
                <label asp-for="Barman.Nom" class="control-label"></label>
                <input asp-for="Barman.Nom" class="form-control" />
                <span asp-validation-for="Barman.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Barman.Prenom" class="control-label"></label>
                <input asp-for="Barman.Prenom" class="form-control" />
                <span asp-validation-for="Barman.Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Barman.PrepareCommandeID" class="control-label"></label>
                <select asp-for="Barman.PrepareCommandeID" class="form-control" asp-items="ViewBag.PrepareCommandeID">
                    <option value="">Aucune</option>
                </select>
                <span asp-validation-for="Barman.PrepareCommandeID" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Retour</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
