@page
@model Gestion_Restaurant.Pages.Commandes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Commande</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Commande.DateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Commande.DateTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Commande.Statut)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Commande.Statut)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Commande.CommandeTables)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Commande.CommandeTables, "table")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Commande.CommandeProduits)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Commande.CommandeProduits, "produits")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Commande.CommandeServiPar)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Commande.CommandeServiPar, "serveur")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Commande.CommandePreparerPar)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Commande.CommandePreparerPar, "barman")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Commande.FactureRattacher)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Commande.FactureRattacher != null)
            {
                @Html.DisplayFor(model => model.Commande.FactureRattacher.FactureInfos)
            }else{
                <span>Aucune facture</span>
            }
            
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Commande?.Id">Modifier</a>
    <a class="btn btn-secondary" asp-page="./Index">Retour</a>
</div>
